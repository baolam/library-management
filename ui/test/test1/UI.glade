            <child>
              <object class="GtkLabel">
                <property name="label">‚öôÔ∏è Settings</property>
              </object>
              <packing>
                <property name="name">settings</property>
              </packing>
            </child>
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>
